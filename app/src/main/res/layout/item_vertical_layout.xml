<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_vr_layout_root"
    android:layout_width="148dp"
    android:layout_height="220dp"
    android:layout_margin="4dp"
    android:background="@drawable/bg_vertical_image">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_vr_layout_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:background="@drawable/bg_circle_image"
        android:src="@drawable/ic_bookmark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_vr_layout_tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="San Francisco" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_vr_layout_tv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="6sp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="United States" />
    </LinearLayout>
</RelativeLayout>